<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="bg-azure flex justify-between p-5">
<%= link_to splash_path do %>
  <p class="font-nova text-white text-xl"> ‚Üê </p>
<% end%>
<h2 class="font-nova text-white text-xl">LOGIN</h2>
  
    <div class="actions">
    <%= f.submit "Log in", class: "font-nova text-sm text-white" %>
  </div>
</div>


<div class="flex flex-col p-5 my-5 gap-5">
  <div class="field">
    <%= f.label :email, class: "font-nova text-coal" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-200 w-full" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "font-nova text-coal" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "border border-gray-200 w-full" %>
  </div>

<div class="flex flex-col items-center">
  <% if devise_mapping.rememberable? %>
    <div class="field py-5">
      <%= f.check_box :remember_me, class: "border-gray-200" %>
      <%= f.label :remember_me, class: "font-nova text-coal" %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-nova text-coal" %><br />
<% end %>
</div>
</div>
<% end %>


